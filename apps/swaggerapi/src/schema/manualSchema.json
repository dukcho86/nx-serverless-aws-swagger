{
  "$schema": "http://json-schema.org/draft-04/schema",

  "definitions": {
    "manual": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "title": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "video": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "image": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        }
      },
      "required": ["slug", "title", "description", "video", "image"]
    }
  },
  "type": "object",

  "title": "Manual Schema",
  "required": ["manuals"],
  "properties": {
    "manuals": {
      "type": "array",
      "uniqueItems": true,
      "title": "The manual array holding manuals",
      "items": { "$ref": "#/definitions/manual" }
    }
  }
}
